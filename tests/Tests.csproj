<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <IsPackable>false</IsPackable>
    <AssemblyName>Lambdajection.Tests</AssemblyName>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="AWSSDK.S3" />
    <PackageReference Include="AWSSDK.SecurityToken"  />
    <PackageReference Include="FluentAssertions"  />
    <PackageReference Include="Microsoft.Build.Locator"  />
    <PackageReference Include="Microsoft.CodeAnalysis"  />
    <PackageReference Include="Microsoft.CodeAnalysis.Workspaces.MSBuild"  />
    <PackageReference Include="NSubstitute"  />
    <PackageReference Include="NuGet.ProjectModel"  />
    <PackageReference Include="nunit"  />
    <PackageReference Include="NUnit3TestAdapter"  />
    <PackageReference Include="Microsoft.NET.Test.Sdk"  />
    <PackageReference 
      Include="Cythral.CodeGeneration.Roslyn.Tool" 
      ReferenceOutputAssembly="false" 
      OutputItemType="CodeGeneratorToolPathItem" 
      SkipGetTargetFrameworkProperties="true" 
      UndefineProperties="TargetFramework" 
    />
    
    <!-- Added to resolve a version conflict, this isn't used directly -->
    <PackageReference Include="System.Configuration.ConfigurationManager" />
  </ItemGroup>

  <ItemGroup>
    <!-- Don't compile the NoFactoryCompilationTestProject, a test will do that at runtime. -->
    <Compile Remove="Integration\NoFactoryCompilationTestProject\**" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\src\Core\Core.csproj" />
    <ProjectReference Include="..\src\Attributes\Attributes.csproj" />
    <ProjectReference Include="..\src\Encryption\Encryption.csproj" />
    <ProjectReference Include="..\src\Generator\Generator.csproj" IncludeAssets="all" OutputItemType="CodeGenerationRoslynPlugin" />
  </ItemGroup>
</Project>
