<Project Sdk="Microsoft.NET.Sdk">
  <Sdk Name="Cythral.CodeGeneration.Roslyn.Plugin.Sdk" />

  <PropertyGroup>
    <PackageId>Lambdajection.Generator</PackageId>
    <AssemblyName>$(PackageId)</AssemblyName>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    <EmbedUntrackedSources>true</EmbedUntrackedSources>
    <NoWarn>NU5118</NoWarn>
    <PackageDescription>Includes the compile-time generator used to generate code needed for Dependency Injection-enabled AWS Lambdas.</PackageDescription>
  </PropertyGroup>

  <ItemGroup>
    <None Include="Generator.props" Pack="true" PackagePath="build/" KeepDuplicates="false" />
    <PackageBuildFolderProjectImport Include="@(None->'%(Filename)%(Extension)')" />
    <PluginRequestedProperty Include="GenerateLambdajectionEntrypoint" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Attributes\Attributes.csproj" />
    <ProjectReference Include="..\Encryption\Encryption.csproj" />
    <ProjectReference Include="..\Core\Core.csproj" />
  </ItemGroup>

</Project>
